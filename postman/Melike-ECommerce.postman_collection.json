          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{base}}/api/register",
        "body": {
          "mode": "raw",
          "raw": "{\n  \n  \"name\": \"Melike\",\n  \"email\": \"melike@example.com\",\n  \"password\": \"melike1234\"\n}\n"
        }
      }
    },
    {
      "name": "Login (admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{base}}/api/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@test.com\",\n  \"password\": \"admin123\"\n}\n"
        }
      }
    },
    {
      "name": "Profile",
      "request": {
        "method": "GET",
